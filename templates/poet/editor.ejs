<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/poet/css/dashboard.css" />
    <link rel="stylesheet" href="/poet/css/addPost.css" />
    <script src="/poet/scripts/submitPost.js"></script>
    <script src="/poet/scripts/editPost.js"></script>
    <script type="text/javascript" src="/poet/ckeditor/ckeditor.js"></script>
    <title>$hivipoetry | Poet</title>
  </head>
  <body>
    <div class="left-sidebar"><%- include('includes/sidebar') %></div>
    <div class="main-content">
      <div class="title header">Edit Post</div>
      <form id="<%- post._id %>">
        <div class="post-title">
          <input
            type="text"
            id="title"
            value="<%- post.title %>"
            placeholder="Enter title here..."
            required
          />
        </div>
        <div class="post-content">
          <textarea
            id="content"
            value=""
            cols="30"
            rows="10"
            placeholder="post content..."
            required
          ></textarea>
          <script
            type="text/javascript"
            id="postContent"
            content="<%- post.content %>"
          >
            CKEDITOR.replace('content');
            const content = postContent.getAttribute('content');
            CKEDITOR.instances['content'].setData(content);
          </script>
        </div>
        <div class="other-information">
          <!-- <% 
          const fillAll = (list, usedItems, idName) => {
            const html = list.map((item) => {
              if(usedItems.find((usedItem) => usedItem.url === item.url)){
                return `<label><input type="checkbox" name="${idName}" value="${item.url}" checked>${item.name}</label>`;
              }
              return `<label><input type="checkbox" name="${idName}" value="${item.url}">${item.name}</label>`;
            });
            return html.join('');
          };
            %> -->

          <div class="category">
            <div class="label">Category</div>
            <div id="category-list">
              <%- fillAll(categories, post.categories, 'category') %>
            </div>
            <div id="add-new-category">
              <input type="text" placeholder="Add new category..." />
              <button>Add</button>
            </div>
          </div>
          <div class="tag">
            <div class="tag">
              <div class="label">Tags</div>
              <div id="tag-list">
                <%- fillAll(tags, post.tags, 'tag') %>
              </div>
              <div id="add-new-tag">
                <input type="text" placeholder="Add new tag..." />
                <button>Add</button>
              </div>
            </div>
          </div>
        </div>
        <div class="url">
          <input
            type="text"
            id="post-url"
            value="<%- post.url %>"
            pattern="[A-Za-z0-9]+"
            title="No special character or space allowed"
            placeholder="Enter post url..."
            required
          />
          <span class="url-availability"></span>
        </div>
        <div class="buttons">
          <button id="update">Update Now</button>
        </div>
      </form>
    </div>
  </body>
</html>
